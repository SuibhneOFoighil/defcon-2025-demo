[Unit]
Description=Ludus Workshop Environment
Wants=ludus-ttyd.service ludus-gui.service ludus-slides.service
After=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/true
ExecStop=/bin/systemctl stop ludus-ttyd.service ludus-gui.service ludus-slides.service

[Install]
WantedBy=multi-user.target